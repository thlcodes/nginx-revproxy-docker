  "version": "0.2.0",
  "configurations": [
    {
      "name": "Connect to server",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceRoot}",
      "port": 4040,
      "host": "127.0.0.1"
    },
    {
      "name": "Connect to godebugger",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceRoot}",
      "port": 4040,
      "host": "127.0.0.1",
      "preLaunchTask": "start debug container",
      "postDebugTask": "stop debug container"
    },
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceRoot}/main.go",
      "env": {
        "ENV": "local",
        "PORT": 8062,
        "GRPCPORT": 5062,
        "VCAP_APPLICATION": "{ \"application_uris\": [ \"http://skeleton:8080\"] }",
        "VCAP_SERVICES": "{}"
      },
      "preLaunchTask": "generate all",
      "args": []
    }
  ]
}