{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "generate all",
      "type": "shell",
      "command": "go generate ./...",
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "generate main",
      "type": "shell",
      "command": "go generate .",
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "build debug binary",
      "type": "shell",
      "command": "mkdir -p \"${workspaceFolder}/build/debug\" && CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -gcflags \"all=-N -l\" -o \"${workspaceFolder}/build/debug/bin\"",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "group": "debug"
      }
    },
    {
      "label": "start debug container",
      "type": "shell",
      "command": "docker run -it --rm -v \"${workspaceFolder}:/app\" -p 4040:4040 -p 8123:8080 -p 5050 --network gopher --name ${workspaceFolderBasename}-debug -e ENV=local -e DLV_LOG=true -e CONTINUE=false -e BINARY=./build/debug/bin godebocker",
      "isBackground": true,
      "dependsOn": [
        "build debug binary"
      ],
      "problemMatcher": {
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "godebocker started.*"
          },
          "endsPattern": {
            "regexp": "API server listening.*"
          }
        }
      },
      "presentation": {
        "group": "debug",
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "stop debug container",
      "type": "shell",
      "command": "docker stop ${workspaceFolderBasename}-debug && rm -f __debug_bin || exit 0",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "group": "debug"
      }
    }
  ]
}